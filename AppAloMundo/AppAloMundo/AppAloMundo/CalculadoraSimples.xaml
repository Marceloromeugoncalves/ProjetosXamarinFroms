<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppAloMundo.CalculadoraSimples">
    <ContentPage.Content>
        <StackLayout>

            <Label Text="Calculadora Simples"/>

            <Label Text="Valor A:"/>

            <Entry x:Name="entryValorA" Keyboard="Numeric" Placeholder="Informe um número"/>

            <Label Text="Valor B:"/>

            <Entry x:Name="entryValorB" Keyboard="Numeric" Placeholder="Informe um número"/>

            <StackLayout Orientation="Horizontal">
                
                <Button Text="+" Clicked="Button_Clicked"/>

                <Button Text="-" Clicked="Button_Clicked"/>

                <Button Text="/" Clicked="Button_Clicked"/>

                <Button Text="*" Clicked="Button_Clicked"/>
                
            </StackLayout>
            
            <Label x:Name="labelResultado"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>